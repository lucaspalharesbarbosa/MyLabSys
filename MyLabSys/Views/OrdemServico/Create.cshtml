@model OrdemServicoViewModel

@{
    ViewData["Title"] = "Ordem de serviço";
}

<h2>Cadastrar ordem de serviço</h2>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="CodigoProtocolo" class="control-label"></label>
                <input asp-for="CodigoProtocolo" class="form-control" />
                <span asp-validation-for="CodigoProtocolo" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="CodigoPedidoMedico" class="control-label"></label>
                <input asp-for="CodigoPedidoMedico" class="form-control" />
                <span asp-validation-for="CodigoPedidoMedico" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DataEmissao" class="control-label"></label>
                <input asp-for="DataEmissao" class="form-control" type="date" />
                <span asp-validation-for="DataEmissao" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DataPrevisaoEntrega" class="control-label"></label>
                <input asp-for="DataPrevisaoEntrega" class="form-control" type="date" />
                <span asp-validation-for="DataPrevisaoEntrega" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdMedico" class="control-label"></label>
                <select asp-for="IdMedico" class="form-control" asp-items="ViewBag.MedicosSelectList">
                    <option selected>Selecione o médico</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdPostoColeta" class="control-label"></label>
                <select asp-for="IdPostoColeta" class="form-control" asp-items="ViewBag.PostosColetasSelectList">
                    <option selected>Selecione o laboratório</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.PacientesSelectList">
                    <option selected>Selecione o paciente</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NomeConvenio" class="control-label"></label>
                <input asp-for="NomeConvenio" class="form-control" placeholder="Informe o convênio do paciente" />
                <span asp-validation-for="NomeConvenio" class="text-danger"></span>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-info">Voltar</a>
    </div>
</form>